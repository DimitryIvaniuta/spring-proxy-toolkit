      ]
    },
    {
      "name": "10 - Admin: API Clients",
      "item": [
        {
          "name": "Create client",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"clientName\": \"MobileApp\",\n  \"clientCode\": \"mobile-app\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/admin/clients",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "admin",
                "clients"
              ]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "if (pm.response.code === 201) {",
                  "  const j = pm.response.json();",
                  "  pm.environment.set('clientId', j.id);",
                  "}"
                ]
              }
            }
          ]
        },
        {
          "name": "List clients",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/admin/clients",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "admin",
                "clients"
              ]
            }
          }
        },
        {
          "name": "Create credential (generates API key)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"credentialName\": \"local-dev-key\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/admin/clients/{{clientId}}/credentials",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "admin",
                "clients",
                "{{clientId}}",
                "credentials"
              ]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "if (pm.response.code === 201) {",
                  "  const j = pm.response.json();",
                  "  pm.environment.set('apiKey', j.apiKeyRaw);",
                  "  pm.environment.set('apiKeyHash', j.apiKeyHash);",
                  "  pm.environment.set('policyClientKey', j.policyClientKey);",
                  "}"
                ]
              }
            }
          ]
        },
        {
          "name": "List credentials",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/admin/clients/{{clientId}}/credentials",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "admin",
                "clients",
                "{{clientId}}",
                "credentials"
              ]
            }
          }
        },
        {
          "name": "Delete client (cascades credentials)",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/admin/clients/{{clientId}}",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "admin",
                "clients",
                "{{clientId}}"
              ]
            }
          }
        }
      ]
    },
    {
      "name": "20 - Demo: Proxy Features (requires demo controller/service in your app)",
      "description": "These requests assume you have demo endpoints like /api/demo/* that call annotated service methods.",
      "item": [
        {
          "name": "Cache (GET) - first call MISS, second HIT",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "X-Api-Key",
                "value": "{{apiKey}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/demo/cache?customerId=42",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "demo",
                "cache"
              ],
              "query": [
                {
                  "key": "customerId",
                  "value": "42"
                }
              ]
            }
          }
        },
        {
          "name": "Idempotent (POST) - same key returns same response",
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.environment.set('idemResponse', pm.response.text());"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "X-Api-Key",
                "value": "{{apiKey}}"
              },
              {
                "key": "X-Idempotency-Key",
                "value": "{{idemKey}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"amount\": 100,\n  \"currency\": \"PLN\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/demo/idempotent",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "demo",
                "idempotent"
              ]
            }
          }
        },
        {
          "name": "Idempotent (POST) - repeat same key",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "X-Api-Key",
                "value": "{{apiKey}}"
              },
              {
                "key": "X-Idempotency-Key",
                "value": "{{idemKey}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"amount\": 100,\n  \"currency\": \"PLN\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/demo/idempotent",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "demo",
                "idempotent"
              ]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test('Same response for same idempotency key', function () {",
                  "  pm.expect(pm.response.text()).to.eql(pm.environment.get('idemResponse'));",
                  "});"
                ]
              }
            }
          ]
        },
        {
          "name": "Rate limit (GET) - call several times quickly to get 429",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "X-Api-Key",
                "value": "{{apiKey}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/demo/ratelimited",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "demo",
                "ratelimited"
              ]
            }
          }
        },
        {
          "name": "Retry (GET) - server fails first N times then succeeds",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "X-Api-Key",
                "value": "{{apiKey}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/demo/retry?failTimes=2",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "demo",
                "retry"
              ],
              "query": [
                {
                  "key": "failTimes",
                  "value": "2"
                }
              ]
            }
          }
        }
      ]
    }
