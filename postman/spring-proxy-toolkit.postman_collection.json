{
  "info": {
    "_postman_id": "44a434ce-21ef-400e-b439-872ab478b2bf",
    "name": "spring-proxy-toolkit-java21 (local)",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "description": "Test collection for Proxy Toolkit: admin client/key, and demo endpoints to exercise audit/cache/idempotency/rate-limit/retry."
  },
  "item": [
    {
      "name": "00 - Observability",
      "item": [
        {
          "name": "Health",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/actuator/health",
              "host": [
